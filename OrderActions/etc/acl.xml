<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="Magento_Sales::sales_operation">
                        <resource id="Magento_Sales::sales_order">
                            <resource id="MagoArab_OrderActions::order_actions" title="Order Actions Control" sortOrder="50">
                                <resource id="MagoArab_OrderActions::change_status" title="Change Order Status" sortOrder="10" />
                                <resource id="MagoArab_OrderActions::print_actions" title="Print Actions" sortOrder="20">
                                    <resource id="MagoArab_OrderActions::print_pdf" title="Print PDF Orders" sortOrder="10" />
                                    <resource id="MagoArab_OrderActions::print_invoices" title="Print Invoices" sortOrder="20" />
                                    <resource id="MagoArab_OrderActions::print_packing" title="Print Packing Slips" sortOrder="30" />
                                    <resource id="MagoArab_OrderActions::print_credit_memos" title="Print Credit Memos" sortOrder="40" />
                                    <resource id="MagoArab_OrderActions::print_all" title="Print All" sortOrder="50" />
                                    <resource id="MagoArab_OrderActions::print_shipping" title="Print Shipping Labels" sortOrder="60" />
                                </resource>
                                <resource id="MagoArab_OrderActions::order_management" title="Order Management" sortOrder="30">
                                    <resource id="MagoArab_OrderActions::cancel" title="Cancel" sortOrder="10" />
                                    <resource id="MagoArab_OrderActions::hold" title="Hold" sortOrder="20" />
                                    <resource id="MagoArab_OrderActions::unhold" title="Unhold" sortOrder="30" />
                                    <resource id="MagoArab_OrderActions::delete" title="Delete" sortOrder="40" />
                                </resource>
                                <resource id="MagoArab_OrderActions::order_statuses" title="Order Statuses" sortOrder="40" />
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>